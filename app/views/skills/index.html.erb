<h2>Skill List</h2>

<br>
  <%= link_to "Create new skill", new_skill_path, :class => "btn btn-primary mb-2" %>
<br>



<table class="table table-bordered mb-0">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Power</th>
      <th>Max PP</th>
      <th>Element Type</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @skills.each do |skill| %>
    <tr>
      <td><%= link_to skill.name, skill_path(skill) %> </td>
      <td> <%= skill.power %> </td>
      <td> <%= skill.max_pp %> </td>
      <td> <%= skill.element_type %> </td>
      <td id="action">
        <%= link_to "edit", edit_skill_path(skill), :class => "btn btn-primary" %>
        <%= link_to "delete", skill, method: :delete,
                                  data: { confirm: "You sure?" }, :class => "btn btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-1" style="float: right">
  <%= will_paginate @skills, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>