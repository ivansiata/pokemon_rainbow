<h2>Trainer List</h2>

<br>
  <%= link_to "Create new trainer", new_trainer_path, :class => "btn btn-primary mb-2" %>
<br>

<table class="table table-bordered mb-0">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @trainers.each do |trainer| %>
    <tr>
      <td><%= link_to trainer.name, trainer_path(trainer) %> </td>
      <td> <%= trainer.email %> </td>
      <td id="action">
        <%= link_to "delete", trainer, method: :delete,
                                  data: { confirm: "You sure?" }, :class => "btn btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-1" style="float: right">
  <%= will_paginate @trainers, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>