<h1>Pokemon Battle</h1>

<br>
  <%= link_to "Create new battle", new_pokemon_battle_path, :class => "btn btn-primary mb-2" %>
<br>

<table class="table table-bordered mb-0">
  <thead class="thead-dark">
    <tr>
      <th>Pokemon 1</th>
      <th>Pokemon 2</th>
      <th>Turn</th>
      <th>Status</th>
      <th>Experience Gained</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @pokemon_battles.each do |pokemon_battle| %>
    <tr>
      <td> <%= link_to pokemon_battle.pokemon1.name, pokemon_path(pokemon_battle.pokemon1) %> </td>
      <td> <%= link_to pokemon_battle.pokemon2.name, pokemon_path(pokemon_battle.pokemon2) %> </td>
      <td> <%= pokemon_battle.current_turn %> </td>
      <td> <%= pokemon_battle.state %> </td>
      <td> <%= pokemon_battle.experience_gain %> </td>
      <td id="action">
        <%= link_to "Battle", pokemon_battle_path(pokemon_battle), :class => "btn btn-primary" %>
        <%= link_to "Delete", pokemon_battle, method: :delete,
                                  data: { confirm: "You sure?" }, :class => "btn btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-1" style="float: right">
  <%= will_paginate @pokemon_battles, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>
