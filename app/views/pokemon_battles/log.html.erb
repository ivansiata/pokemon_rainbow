<h1>Pokemon Battle Logs</h1>

<table class="table table-bordered mb-0">
  <thead class="thead-dark">
    <tr>
      <th>Attacker</th>
      <th>Defender</th>
      <th>Turn</th>
      <th>Attacker Current Health</th>
      <th>Defender Current Health</th>
      <th>Skill Used</th>
      <th>Action Type</th>
    </tr>
  </thead>
  <tbody>
    <% @pokemon_battle_logs.each do |pokemon_battle_log| %>
    <tr>
      <td> <%= pokemon_battle_log.pokemon1.name %> </td>
      <td> <%= pokemon_battle_log.pokemon2.name %> </td>
      <td> <%= pokemon_battle_log.turn %> </td>
      <td> <%= pokemon_battle_log.attacker_current_health_point %> </td>
      <td> <%= pokemon_battle_log.defender_current_health_point %> </td>
      <td> <%= pokemon_battle_log.skill.name if pokemon_battle_log.skill.present? %> </td>
      <td> <%= pokemon_battle_log.action_type %> </td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to "Back", pokemon_battle_path(@pokemon_battle_logs.first.pokemon_battle_id), class: "btn btn-primary" %>
